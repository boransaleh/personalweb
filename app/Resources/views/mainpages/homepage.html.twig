    <h1>Contact</h1></br>

    <div class="row">
        <div class="col-lg-7">
           {{ form_start(ContactForm,{'attr':{'id': 'defaultForm'}}) }}
                <div class="form-group">

                    {{ form_row(ContactForm.email,{'id': 'email'}) }}
                </div>
                <div class="form-group">

                    {{ form_row(ContactForm.subject) }}
                </div>
                <div class="form-group">

                    {{ form_row(ContactForm.message) }}
                </div>


                <button type="submit" class="btn btn-lg btn-danger" formnovalidate >Send</button>
            {{ form_end(ContactForm) }}


            </br>

            <div  id="feedback"></div>

        </div>

        <script type="text/javascript">
            $(document).ready(function() {
                $('#defaultForm').bootstrapValidator({
                    message: 'This value is not valid',
                    feedbackIcons: {
                        valid: 'glyphicon glyphicon-ok',
                        invalid: 'glyphicon glyphicon-remove',
                        validating: 'glyphicon glyphicon-refresh'
                    },
                    submitHandler: function(validator, form, submitButton) {



                        var data= $('#defaultForm').serializeArray();


                        $.ajax({
                            type: "POST",
                            url: "{{ path('success_page') }}",
                            data:data ,
                            dataType: "json",
                            success: function(response) {
                                $('#defaultForm').trigger("reset");
                                $('#feedback').html('');
                                $('#feedback').html('<div class="alert alert-success" role="alert">'+response["success"]+'</div>');
                            },
                            error: function(response){
                                $('#feedback').html('');
                                $('#feedback').html('<div class="alert alert-danger" role="alert">'+response["failed"]+'</div>');
                            }
                        });





                    },
                    fields: {

                    email: {
                            validators: {
                                notEmpty: {
                                    message: 'The email address is required and can\'t be empty!'
                                },
                                emailAddress: {
                                    message: 'The input is not a valid email address!'
                                }
                            }
                        },
                        subject:{
                            validators:{

                                notEmpty:{

                                    message:'Please write your Subject!'
                                },
                                stringLength:{

                                    min:3,
                                    message:'your subject should be minimum 3 characters!!!  '
                                }

                            }
                        },

                        message:{

                            validators:{

                                notEmpty:{

                                    message:'please write your Email!!'
                                }
                            }
                        }


                    }
                });

            });
        </script>

