                            <strong><h1>Project Outcomes : </h1></strong>
                            <ul>

                                <li>kids are being encouraged to learn.</li>
                                <li>prepare them to learn to code at a young age</li>
                                <li>Learning through play is the way to go.</li>
                                <li>Improve logic skills.</li>
                                <li>Ingrain important thinking skills into kids.</li>


                            </ul>

                            <span class="label label-default" style="font-size: small"> You can view our program's Curriculum by clicking <a
                                        href="{{ asset('Uploads/Curriculum.pdf') }}">here </a> </span></br>
                            <a href="{{ path('apply_code') }}" class="btn btn-danger">Apply Here for your school</a>


                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="profile"></br>

                            <div id="Comments" style="padding-top: 30px">
                            </div>

                            {{ form_start(CommentForm,{'attr':{'id': 'CommentForm','class':'form-group-sm'}}) }}
                            <div class="form-group">

                                {{ form_row(CommentForm.email,{'id': 'email'}) }}
                            </div>

                            <div class="form-group">

                                {{ form_row(CommentForm.message) }}
                            </div>


                            <button type="submit" class="btn btn-sm btn-danger" formnovalidate>Comment</button>
                            {{ form_end(CommentForm) }}


                            </br>
                            <div id="loader" hidden><img src="{{ asset('image/Loading_icon.gif') }}" width="120px"
                                                         height="79px" border="0px"></div>

                            <div id="feedback"></div>




                            <script type="text/javascript">

                                $(document).ready(function () {

                                    $("#CommentForm").bootstrapValidator({

                                        message: "this value is not valid",
                                        feedbackIcons: {

                                            invalid: 'glyphicon glyphicon-remove',

                                        },
                                        submitHandler: function (validator, form, submitButton) {


                                            var data = $('#CommentForm').serializeArray();

                                            $.ajax({
                                                type: "POST",
                                                url: "{{ path('save_comment') }}",
                                                data: data,
                                                dataType: "json",
                                                beforeSend: function () {
                                                    $('#loader').show();
                                                },
                                                complete: function () {
                                                    $('#loader').hide();
                                                },
                                                success: function (response) {

                                                    $('#CommentForm').trigger("reset");
                                                    $('#feedback').html('');
                                                    if (response["status"] == '1') {


                                                        $('#feedback').html('<div class="alert alert-success" role="alert">' + response['message'] + '</div>');
                                                        $('#Comments').load();

                                                    }


                                                },
                                                error: function (response) {
                                                    $('#CommentForm').trigger("reset");

                                                    $('#feedback').html('');
                                                    $('#feedback').html('<div class="alert alert-danger" role="alert">' + response['failed'] + '</div>');
                                                }
                                            });


                                        },
                                        fields: {

                                            'email': {

                                                validators: {

                                                    notEmpty: {

                                                        message: 'Email is Required'
                                                    },
                                                    emailAddress: {

                                                        message: "The Email is not Valid"
                                                    }
                                                }
                                            },
                                            'message': {

                                                validators: {

                                                    notEmpty: {

                                                        message: 'Email is Required'
                                                    }
                                                }
                                            }


                                        }

                                    });


                                });


                            </script>
                            <script>

                                $(function () {

                                    $.ajax({
                                        type: "GET",
                                        url: "{{ path('get_comments') }}",
                                        success: function (comments) {
                                            $.each(comments, function (i, comments) {

                                                console.log(comments['date']);

                                                $('#Comments').append(
                                                        '<div class="media"> <div class="media-left media-middle"> <img class="media-object" src="{{ asset('image/Anonymous_User.jpg') }}"  width="50" height="50"> </div> <div class="media-body"> <h4 class="media-heading">' + comments['email'] + '</h4><p class="text-muted">'+comments['date']+'</p>' + comments['comment'] + '</div></div>'
                                                );


                                            });
                                        }


                                    });

                                });
                            </script>

                            <script type="text/javascript">

                                $(document).ready(function () {

                                    $("#Comments").load(function () {


                                        $.ajax({
                                            type: "GET",
                                            url: "{{ path('get_comments') }}",
                                            success: function (comments) {
                                                $('#Comments').html('');
                                                $.each(comments, function (i, comments) {


                                                    $('#Comments').append(
                                                            '<div class="media"> <div class="media-left media-middle"> <img class="media-object" src="{{ asset('image/Anonymous_User.jpg') }}"  width="50" height="50"> </div> <div class="media-body"> <h4 class="media-heading">' + comments['email'] + '</h4><p class="text-muted">'+comments['date']+'</p>' + comments['comment'] + '</div></div>'
                                                    );


                                                });
                                            }


                                        });
                                    });
                                });

                            </script>


                        </div>

                    </div>

                </div>


            </div>

            <div class="col-sm-2"></div>

        </div>

    </div>


{% endblock body %}